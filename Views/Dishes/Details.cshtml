@model JinglePlanner.Models.Dish

@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>
<hr />

<div>
    
    
    <dl class="row">
        

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GuestName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GuestName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PartyName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PartyName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Name)
        </dd>
        <div>
            @if (Model.RecipeId != null)
            {
                <a asp-controller="Recipes"  asp-action="Details" asp-route-id="@Model?.Recipe.Id">Recipe</a>
            }
            
        </div>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.DishId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
