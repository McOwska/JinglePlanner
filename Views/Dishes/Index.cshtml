@model IEnumerable<JinglePlanner.Models.Dish>

@{
    ViewData["Title"] = "Dishes";
}

<h1>Dishes</h1>
<hr/>

@using (Html.BeginForm("Index", "Dishes", FormMethod.Get))
{
    <div class="form-group">
        @Html.DropDownList("partyName", (SelectList)ViewBag.PartiesNames, "All")
    </div>
    <div class="form-group">
        @Html.DropDownList("guestName", (SelectList)ViewBag.GuestsNames, "All")
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuestName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartyName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecipeId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeId)
            </td>
            <td>
                @* <a asp-action="Edit" asp-route-id="@item.DishId">Edit</a> | *@
                <a asp-action="Details" asp-route-id="@item.DishId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DishId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

